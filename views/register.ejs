<% include ./partials/header %>

<div class="row">
    <div class="col-md-12 float-left">
        <h1>Sign Up</h1>
    </div>
    <div class="col-lg-6 col-sm-6" >
        <form action="/register" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input class="form-control" type="text" name="username" placeholder="username">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" name="password" placeholder="password">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username">First Name</label>
                        <input class="form-control" type="text" name="firstName" placeholder="first name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username">Last Name</label>
                        <input class="form-control" type="text" name="lastName" placeholder="last name">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="username">Email</label>
                <input class="form-control" type="email" name="email" placeholder="john@doe.com">
            </div>
            <div class="form-group">
                <label for="username">Avatar Image</label>
                <input class="form-control" type="text" name="avatar" placeholder="avatar url image">
            </div>
            <div class="form-group">
                <label for="isAdmin">Adman Code</label>
                <input class="form-control" type="text" name="adminCode" placeholder="Enter in Admin Code">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-warning btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back to Campgrounds</a>
    </div>
    <div class="col-lg-6 col-sm-6">
        <img src="https://smores.tv/assets/img/camping.png" class="img-fluid" alt="Responsive image">
    </div>
</div>


<% include ./partials/footer %>